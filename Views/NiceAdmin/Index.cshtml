
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Master.cshtml";
}
<script src="~/Angular/Controller/IndexController.js"></script>

<main id="main" class="main" style="padding:0px;" ng-controller="IndexController">

    <div class="container" style="margin-top: 100px;">
        <div class="row text-center justify-content-center">

            <div class="col-md-4 mb-4">
                <div class="card shadow-lg border-0 rounded-3 h-100" style="background: linear-gradient(to right, #6dd5fa, #2980b9); color: white;">
                    <div class="card-body">
                        <i class="fas fa-calendar-check fa-3x mb-3"></i>
                        <h4 class="card-title">TOTAL BOOKINGS</h4>
                        <p class="card-text" style="font-size: 40px; font-weight: bold;">{{Stats.TotalBookings}}</p>
                    </div>
                </div>
            </div>

            <div class="col-md-4 mb-4">
                <div class="card shadow-lg border-0 rounded-3 h-100" style="background: linear-gradient(to right, #f7971e, #ffd200); color: white;">
                    <div class="card-body">
                        <i class="fas fa-concierge-bell fa-3x mb-3"></i>
                        <h4 class="card-title">TOTAL SERVICES</h4>
                        <p class="card-text" style="font-size: 40px; font-weight: bold;">{{Stats.TotalServices}}</p>
                    </div>
                </div>
            </div>

            <div class="col-md-4 mb-4">
                <div class="card shadow-lg border-0 rounded-3 h-100" style="background: linear-gradient(to right, #56ab2f, #a8e063); color: white;">
                    <div class="card-body">
                        <i class="fas fa-users fa-3x mb-3"></i>
                        <h4 class="card-title">TOTAL EMPLOYEES</h4>
                        <p class="card-text" style="font-size: 40px; font-weight: bold;">{{Stats.TotalEmployees}}</p>
                    </div>
                </div>
            </div>

        </div>
    </div>

</main>





